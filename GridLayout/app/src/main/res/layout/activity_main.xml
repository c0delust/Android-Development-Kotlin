        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="#"
        android:textColor="@color/white" />

</GridLayout>