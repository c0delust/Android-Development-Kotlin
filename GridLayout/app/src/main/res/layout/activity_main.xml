        android:textColor="@color/white" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="5sp"
        android:background="#2B4570"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/white" />


