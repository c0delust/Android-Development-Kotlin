<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10sp">

        <TextView
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FF0000"
            android:textSize="40sp" />

        <TextView
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FD4040"
            android:textSize="40sp" />

        <TextView
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="#FF6767"
            android:textSize="40sp" />

        <TextView
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="#FB8E8E"
            android:textSize="40sp" />

        <TextView
            android:layout_width="55sp"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="#FAB0B0"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10dp"
            android:background="#00A6FF"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10dp"
            android:background="#62C8FF"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10dp"
            android:background="#91D4F8"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10dp"
            android:background="#B7E5FD"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10dp"
            android:background="#CBECFD"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>